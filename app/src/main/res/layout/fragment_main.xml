<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="mainViewModel"
            type="com.thinlineit.ctrlf.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/note"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>

        <TextView
            android:id="@+id/showAllNoteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/allView"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/noteListRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:data="@{mainViewModel.noteList}"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/textNote"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/list_item_note" />

        <TextView
            android:id="@+id/textIssue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/issue"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/noteListRecyclerView">
        </TextView>

        <TextView
            android:id="@+id/showAllIssueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/allView"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/noteListRecyclerView">
        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/issueListRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:data="@{mainViewModel.issueList}"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/textIssue"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/list_item_main_issue" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>