<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="pageViewModel"
            type="com.thinlineit.ctrlf.page.PageViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_blue">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/noteInfo"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/noteBook"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_note_1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:text="@{pageViewModel.noteDetailTitle}"
                    app:layout_constraintTop_toTopOf="@+id/noteBook"
                    app:layout_constraintLeft_toLeftOf="@+id/noteBook"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="22dp"
                    android:textSize="8dp" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/noteBook"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/noteTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{pageViewModel.noteDetailTitle}"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/noteCreatedAt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="생성일자 2021.00.00"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/noteTitle"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/topicCountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="topic"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@id/noteCreatedAt"
                        tools:ignore="MissingConstraints" />
                    <TextView
                        android:id="@+id/topicCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"

                        app:layout_constraintTop_toBottomOf="@id/noteCreatedAt"
                        app:layout_constraintLeft_toRightOf="@id/topicCountText"/>

                    <TextView
                        android:id="@+id/pageCountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text=" page"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@id/noteCreatedAt"
                        app:layout_constraintLeft_toRightOf="@id/topicCount"/>
                    <TextView
                        android:id="@+id/pageCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"

                        app:layout_constraintTop_toBottomOf="@id/noteCreatedAt"
                        app:layout_constraintLeft_toRightOf="@id/pageCountText"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/topicListRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/dark_blue"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            app:data="@{pageViewModel.noteInfo}"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/noteInfo"
            tools:listitem="@layout/list_item_topic_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
