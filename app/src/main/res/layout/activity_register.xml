<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".registration.RegisterActivity">


        <EditText
            android:id="@+id/regName"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="200dp"
            android:hint="@string/nickname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/regEmail"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:hint="@string/phoneNum"
            app:layout_constraintStart_toStartOf="@+id/regName"
            app:layout_constraintTop_toBottomOf="@+id/regName" />

        <EditText
            android:id="@+id/regPhoneNum"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:hint="@string/email"
            app:layout_constraintStart_toStartOf="@+id/regEmail"
            app:layout_constraintTop_toBottomOf="@+id/regEmail" />


        <EditText
            android:id="@+id/regPassword"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:hint="@string/pwd"
            android:inputType="textPassword"
            app:layout_constraintStart_toStartOf="@+id/regPhoneNum"
            app:layout_constraintTop_toBottomOf="@+id/regPhoneNum" />

        <EditText
            android:id="@+id/regPassword2"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:hint="@string/pwdConfirm"
            android:inputType="textPassword"
            app:layout_constraintStart_toStartOf="@+id/regPassword"
            app:layout_constraintTop_toBottomOf="@+id/regPassword" />

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="145dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:text="@string/registerFin"
            app:layout_constraintEnd_toEndOf="@id/regPassword2"
            app:layout_constraintTop_toBottomOf="@+id/regPassword2" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>